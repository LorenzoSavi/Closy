@page
@model closy.Pages.Admin.Users.DetailsModel
@{
    ViewData["Title"] = "Dettagli Utente";
}

<div class="admin-container">
    <!-- Sidebar resta uguale -->

    <main class="admin-main">
        <header class="admin-header">
            <div class="header-title">
                <h1>Dettagli Utente</h1>
                <p>Visualizza informazioni dettagliate e capi dell'utente</p>
            </div>
            <div class="header-actions">
                <a href="/Admin/Users" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left"></i>
                    Torna alla lista
                </a>
            </div>
        </header>

        <div class="user-details-container">
            <!-- User Info Card -->
            <div class="card mb-4">
                <div class="card-header">
                    <h2>Informazioni Utente</h2>
                </div>
                <div class="card-body">
                    <div class="user-profile">
                        <img src="@Model.User.ProfilePictureUrl" alt="@Model.User.Nome" class="profile-picture" />
                        <div class="user-info">
                            <h3>@Model.User.Nome @Model.User.Cognome</h3>
                            <p>@Model.User.Email</p>
                            <p>Registrato il: @Model.User.DataRegistrazione.ToString("dd/MM/yyyy")</p>
                            <div class="role-badges">
                                @foreach (var role in Model.UserRoles)
                                {
                                    <span class="role-badge @role.ToLower()">@role</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- User's Items Card -->
            <div class="card">
                <div class="card-header">
                    <h2>Guardaroba dell'utente</h2>
                    <span class="items-count">@Model.UserItems.Count capi totali</span>
                </div>
                <div class="card-body">
                    <div class="items-grid">
                        @foreach (var item in Model.UserItems)
                        {
                            <div class="item-card">
                                <img src="@item.ImageUrl" alt="@item.Name" />
                                <div class="item-info">
                                    <h4>@item.Name</h4>
                                    <p>@item.Brand</p>
                                    <div class="item-details">
                                        <span class="category-badge">@item.Category</span>
                                        <span class="color-badge" style="background-color: @item.Color">@item.Color</span>
                                        <span class="seasons-badge">@item.Seasons</span>
                                    </div>
                                    @if (item.IsFavorite)
                                    {
                                        <i class="bi bi-heart-fill favorite-icon"></i>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<style>
    .user-details-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .profile-picture {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .user-profile {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .items-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    .item-card {
        background: white;
        border-radius: var(--border-radius);
        overflow: hidden;
        box-shadow: var(--box-shadow);
        transition: transform 0.2s;
    }

        .item-card:hover {
            transform: translateY(-2px);
        }

        .item-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

    .item-info {
        padding: 1rem;
    }

        .item-info h4 {
            margin: 0;
            font-size: 1rem;
        }

        .item-info p {
            color: var(--text-light);
            margin: 0.5rem 0;
            font-size: 0.9rem;
        }

    .season-badge {
        background: var(--light-color);
        padding: 0.25rem 0.75rem;
        border-radius: 50px;
        font-size: 0.75rem;
        color: var(--text-color);
    }
</style>